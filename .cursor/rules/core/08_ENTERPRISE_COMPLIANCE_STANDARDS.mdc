class ComplianceValidator:
    def __init__(self):
        self.frameworks = ['SOC2', 'HIPAA', 'ISO27001', 'GDPR', 'PCI']

    async def validate_all_frameworks(self, operation: str, data: dict) -> ComplianceResult:
        results = {}

        for framework in self.frameworks:
            validator = self.get_framework_validator(framework)
            results[framework] = await validator.validate(operation, data)

        return ComplianceResult(
            passed=all(result.passed for result in results.values()),
            framework_results=results,
            violations=self.collect_violations(results),
            remediation_steps=self.generate_remediation_steps(results)
        )
